import React, { useState, useEffect, useRef } from 'react';
import { Clock, Users, MapPin, Volume2, VolumeX, Volume1, Monitor, Tv, Projector, Phone, Lock, Unlock, Calendar, ChevronLeft, ChevronRight, X, Bell } from 'lucide-react';

