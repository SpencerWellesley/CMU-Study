  { id: 'WEAN-5409', building: 'Wean Hall', name: 'Wean 5409', capacity: 8, status: 'open', inUseUntil: null, noiseLevel: 'collaborative', amenities: ['whiteboard', 'monitor', 'tv', 'projector'], reservations: [] },
